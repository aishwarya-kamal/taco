<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="category"
            type="com.candybytes.taco.vo.Category" />

        <variable
            name="clickListener"
            type="com.candybytes.taco.ui.util.ClickListener" />

        <variable
            name="viewModel"
            type="com.candybytes.taco.ui.categorylist.CategoryListViewModel" />

        <!--        <variable-->
        <!--            name="numberOfFood"-->
        <!--            type="String" />-->
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:rippleColor="@color/red">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="@{() -> clickListener.onClick(category)}">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                style="?attr/textAppearanceHeadline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:maxLines="2"
                android:text="@{category.name}"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/category_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Category name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/category_id"
                style="?attr/textAppearanceCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto"
                android:text="@{String.valueOf(category.id)}"
                app:layout_constraintBaseline_toBaselineOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="#1" />

            <!--
            Async load the total amount of food items referenced in this category
                android:text="@{`Loaded ` + numberOfFood + ` food items`}" -->

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/roboto"
                android:text="@{`Loaded ` + String.valueOf(viewModel.getCategoryFoodTotalNumber(category.id)) + ` food items`}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:text="Loaded XX food items" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
